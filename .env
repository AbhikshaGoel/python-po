# ============================================
# COPY THIS FILE TO .env AND FILL IN VALUES
# ============================================

# -- Telegram Bot (for approval notifications) --
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# -- Slack Bot (optional, leave blank to skip) --
SLACK_BOT_TOKEN=
SLACK_CHANNEL_ID=

# -- Facebook --
FACEBOOK_PAGE_ID=your_page_id
FACEBOOK_ACCESS_TOKEN=your_long_lived_token

# -- Instagram (uses Facebook Graph API) --
INSTAGRAM_BUSINESS_ACCOUNT_ID=your_ig_business_id
INSTAGRAM_ACCESS_TOKEN=your_token

# -- Twitter/X --
TWITTER_API_KEY=your_api_key
TWITTER_API_SECRET=your_api_secret
TWITTER_ACCESS_TOKEN=your_access_token
TWITTER_ACCESS_SECRET=your_access_secret

# -- YouTube (OAuth2) --
YOUTUBE_CLIENT_ID=your_client_id
YOUTUBE_CLIENT_SECRET=your_client_secret
YOUTUBE_REFRESH_TOKEN=your_refresh_token

# -- LinkedIn --
LINKEDIN_ACCESS_TOKEN=your_token
LINKEDIN_PERSON_ID=your_person_urn

# -- Webhook Secret (for incoming content API) --
WEBHOOK_SECRET=a_random_secret_string_change_this

# -- Schedule (24hr format, comma-separated) --
POST_TIMES=09:00,13:00,18:00

# -- Approval --
APPROVAL_TIMEOUT_MINUTES=5
AUTO_APPROVE=true

# -- General --
LOG_LEVEL=INFO
DRY_RUN=false